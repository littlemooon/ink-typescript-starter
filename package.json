{
  "name": "ink-typescript-starter",
  "version": "1.0.0",
  "license": "MIT",
  "bin": "./dist/cli.js",
  "scripts": {
    "start": "npm run build && node ./dist/cli.js",
    "build": "npm run clean && npx tsc",
    "dev": "npm run build -- --watch",
    "clean": "rm -rf dist",
    "format": "npx prettier . --write",
    "test": "npx jest",
    "test:watch": "npm run test -- --watch"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "chalk": "^4.0.0",
    "ink": "^2.7.1",
    "meow": "^6.1.0",
    "react": "^16.13.1"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "@types/react": "^16.9.34",
    "husky": "^4.2.5",
    "ink-testing-library": "^1.0.3",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "ts-jest": "^25.3.1",
    "typescript": "^3.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test && npm run build"
    }
  },
  "lint-staged": {
    "*": "npm run format"
  }
}
